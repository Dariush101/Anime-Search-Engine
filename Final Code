# List Example
anime_objects = [anime1,anime2,anime3,anime4,anime5,anime6,anime7,anime8,anime9,anime10,anime11,anime12,anime13,anime14,anime15,anime16,anime17,anime18,anime19,anime21,anime22,anime23]
actionlist = []
actionAge = []
actionNewGen = []
actionNewOld = []

for y in anime_objects:
    if y.genre == "action":
        actionlist.append(y.name)
        
        
for x in anime_objects:
    if x.age < 18:
        actionAge.append(x.name)



print(actionlist)
print(actionAge)


